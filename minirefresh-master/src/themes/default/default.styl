/**
 * default 主题的样式
 */

.minirefresh-theme-default
    .minirefresh-downwrap 
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 75px;
    .minirefresh-upwrap 
        min-height: 30px;
        padding: 15px 0;
        text-align: center;
    .downwrap-content 
        /*position: absolute;*/
        width: 100%;
        padding: 10px 0;
        text-align: center;
    .minirefresh-downwrap .downwrap-progress,
    .minirefresh-upwrap .upwrap-progress
            display: inline-block;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 1px solid gray;
            margin-right: 8px;
            border-bottom-color: transparent;
            vertical-align: middle;
    .minirefresh-downwrap
        .downwrap-success
        .downwrap-error
            /*border-bottom-color: gray;*/
            display: none;
            
    .minirefresh-downwrap .downwrap-tips,
    .minirefresh-upwrap .upwrap-tips
            display: inline-block;
            font-size: 12px;
            color: gray;
            vertical-align: middle;
    /**
     * 没有更多数据时，要设置为block，否则和mui会有样式冲突
     */        
    .status-nomore       
        .upwrap-tips
            /*
             * vertical-align: middle;会导致显示不全，display:block也不起作用
             * 因此设置一个padding
             */
            padding: 15px 0;